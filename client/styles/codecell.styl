pre
    white-space: pre-wrap
    margin: 0
    padding: 0

    code
        margin: 0
        padding: 0.4em



codecell
    code-cell-spacing = 0.4em

    pre code
        display: block
        padding: code-cell-spacing
        background-color: black
        color: white

    &.collapsed,
    &.dir-collapse:not(.uncollapsed)
        & > *:not(.meta)
            display: none !important

        & > .meta .lang:before
            display: inline-block
            content: "â–¸"
            padding-right: 0.4em
        
        .dir-collapse
            display: none

    &.fullscreen
        position: fixed
        top: 2em
        bottom: 0
        left: 0
        right: 0
        z-index: 9999
        background-color: white
        overflow: scroll
        box-sizing: border-box
        height: auto
        width: auto
        padding: 0.6em
        box-sizing: border-box;
        display: flex;
        flex-direction: column;

        & > iframe
            height: 100%

        .meta .directives .directive.dir-inline
            color: white
            background-color: green
    
    &.remote > .meta > .source 
        color: green
        font-weight: bold

    &.local > .meta > .source
        color: #ccc
        font-weight: italic

    &.dir-hidemeta:not(.dir-showmeta),
    &.output.lang-md:not(.dir-showmeta),
    &.output.lang-lit:not(.dir-showmeta)
        & > .meta
            display: none
    
    &.dir-below > pre
        margin-bottom: 0.4em

    &.dir-above > .meta
        margin-top: 0.4em

    & > .meta
        font-family monospace
        display: block

        .lang
            font-weight bold
            margin-right code-cell-spacing
        
        .repl
            font-style: italic
            color: tint(black, 60%)
            margin-right code-cell-spacing

        .filename
            color: tint(black, 60%)
            margin-right code-cell-spacing
        
        .tag, .directive, .attribute
                margin-right: 0.4em
                border-radius 2px
                background-color: tint(black, 90%)
        .tag
            &:before
                content '#'
        .directive
            &:before
                content '!'
    & pre
        margin: 0
        padding: 0
        min-height: 1em
        white-space: pre-wrap

        & ~ *:not(.meta)
            margin-top: 0.4em
    
    .updatedAt
        cursor pointer
        font-family: monospace
        font-size: 0.8em;
        color: #999
        text-align: right
        .Time
            font-weight: bold

codecell.dir-error pre
  border: 2px solid red

