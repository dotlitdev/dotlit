codecell
    code-cell-spacing = 0.4em

    & > .meta
        font-family monospace
        display: block

        .lang
            font-weight bold
            margin-right code-cell-spacing
        
        .repl
            font-style: italic
            color: tint(black, 60%)
            margin-right code-cell-spacing

        .filename
            color: tint(black, 60%)
            margin-right code-cell-spacing
        
        ul, ol
            display inline-flex
            margin 0
            padding 0
            list-style none
            flex-direction: column
            
            li 
                padding 0 (code-cell-spacing / 2)
                margin 0 (code-cell-spacing / 2)
                border-radius 2px
                background-color: tint(black, 90%)
        .tag
            &:before
                content '#'
        .directive
            &:before
                content '!'
    & pre
        margin: 0
        padding: code-cell-spacing
        min-height: 1em
        background-color: darkslategrey
        color: white
        white-space: pre-wrap
    
    & > output > pre
        background-color: white
        color: black