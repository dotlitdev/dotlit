```js
const mLon = 40075017
const mLat = 40007863
const x = 25
const n = Math.pow(2, x)
const dLon = mLon / n
const dLat = mLat / n

const binToHex = (str) => parseInt(str,2).toString(16)

const normLat = lat => lat + 90
const normLon = lon => lon + 180

const geo2hash = (lat,lon) => {
  const bins = ['','']
  let [a,b] = [normLat(lat) / dLat, normLon(lon) / dLon]
  let S = n
  for (var I=0;I<x;I++) {
    S = S / 2
    bins[0] += ((a < S) ? "0" : "1")
    bins[1] += ((b < S) ? "0" : "1")
  }
  const hexs = bins.map( bin => binToHex(bin))
  console.log({hexs, bins})
  return hexs.join('x')
}

return geo2hash(30,30)
```
