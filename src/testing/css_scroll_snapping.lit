```css !below viewer=style
xbody {
  xbackground-color: red;
  x-scroll-snap-type: both mandatory;
  scroll-snap-type: y proximity;
  scroll-padding-top: 50px;
}

xcell {
  scroll-snap-align: start;
  scroll-snap-stop: normal;
}

x[id]:before {
  content: '';
  display: block;
  height: 2em;
  width: 100vw;
  background-color: blue;
}

x#content [id]:before {
    content: '';
    display: inline-block;
    height: 50px;
    width: 50px;
    xmargin-top: -50px;
    xvisibility: hidden;
    pointer-events: none;
    background-color: blue;
}

[id]:target:before {
  content: 'beforetarget';
  display: inline-block;
  height: 1em;
  xpadding-top: 2em !important;
}

.cell-content {
  overflow: visible !important;
}

