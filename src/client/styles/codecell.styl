codecell
    code-cell-spacing = 0.4em

    &.collapsed,
    &.dir-collapse:not(.uncollapsed)
        & > *:not(.meta)
            display: none !important

        & > .meta .lang:before
            display: inline-block
            content: "â–¸"
            padding-right: 0.4em

    &.fullscreen
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        z-index: 9999
        background-color: white
        overflow: scroll
        box-sizing: border-box
        height: auto
        width: auto
        padding: 0.6em

        & > iframe
            height: 100%

        .meta .directives .directive.dir-inline
            color: white
            background-color: green
    
    &.remote > .meta > .source 
        color: green
        font-weight: bold

    &.local > .meta > .source
        color: #ccc
        font-weight: italic

    &.dir-hidemeta:not(.dir-showmeta),
    &.lang-md:not(.dir-showmeta),
    &.lang-lit:not(.dir-showmeta)
        & > .meta
            display: none
    
    &.dir-below > pre
        margin-bottom: 0.4em

    &.dir-above > .meta
        margin-top: 0.4em

    & > .meta
        font-family monospace
        display: block

        .lang
            font-weight bold
            margin-right code-cell-spacing
        
        .repl
            font-style: italic
            color: tint(black, 60%)
            margin-right code-cell-spacing

        .filename
            color: tint(black, 60%)
            margin-right code-cell-spacing
        
        ul, ol
            display inline-flex
            margin 0
            padding 0
            list-style none
            flex-direction: column
            
            li 
                padding 0 (code-cell-spacing / 2)
                margin 0 (code-cell-spacing / 2)
                border-radius 2px
                background-color: tint(black, 90%)
        .tag
            &:before
                content '#'
        .directive
            &:before
                content '!'
    & pre
        margin: 0
        padding: 0
        min-height: 1em
        white-space: pre-wrap

        & ~ *:not(.meta)
            margin-top: 0.4em
            
    
        // & > output > pre
        //     background-color: white
        //     color: black
    
    .updatedAt
        cursor pointer
        font-family: monospace
        font-size: 0.8em;
        color: #999
        text-align: right
        .Time
            font-weight: bold

