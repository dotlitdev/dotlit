body 
    max-width 1024px
    margin 0 auto
    padding 1em

#backlinks
    color: tint(black, 60%)

.cell, .LitCode 
    padding 0.4em
    margin 0

.cell 
    & > *:last-child 
        margin-bottom 0
        
    & > *:first-child 
        margin-top 0

.LitLink 
    &.internal.new 
        color red
        text-decoration underline
            
.LitCode 
    & > .meta 
        font-family monospace

        .lang 
            font-weight bold
            margin-right 0.4em
        
        .repl 
            font-style: italic
            color: tint(black, 60%)
            margin-right 0.4em

        .filename 
            color: tint(black, 60%)
            margin-right 0.4em
        
        ul, ol 
            display inline-flex
            margin 0
            padding 0
            list-style none
            float right
            
            li 
                padding 0 0.2em
                margin 0 0.2em
                border-radius 2px
                background-color: tint(black, 90%)
        .tag 
            &:before 
                content '#'
        .directive 
            &:before 
                content '!'
    & pre 
        margin: 0
        padding: 0.4em
        min-height: 1em
        background-color: darkslategrey
        color: white
    
    & > output > pre
        background-color: white
        color: black
