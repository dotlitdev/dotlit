body
    max-width 1024px
    margin 0 auto

#header
    top: 0
    position: sticky
    background-color: white
    z-index: 99999
    border-bottom: 1px solid #efefef;

   
    & > header
        display: grid
        padding: 0.6em
        gap: 0.6em
        

section, cell, codecell
    display: block

#backlinks
    color: tint(black, 60%)

a[wikilink="true"]
    &:before,
    &:after
        color: grey
    &:before 
        content: '['
    &:after 
        content: ']'



cell
    cell-border-width = 1px 3px
    cell-border-color = #9999f7

    padding: 0.6em
    margin: 0
    border-color: transparent
    border-style: solid
    border-width: cell-border-width
        
    & > *:first-child
        margin-top 0
    
    &.selected
        border-color: cell-border-color
    
    &.editing
        padding: 0


a
    &.internal.new 
        color red
        text-decoration underline

cell:not(.code) code
    border: 1px solid #00000012;
    padding: 0 0.2em;
    background-color: #00000005;
    border-radius: 2px;

codecell
    code-cell-spacing = 0.4em

    & > .meta
        font-family monospace

        .lang
            font-weight bold
            margin-right code-cell-spacing
        
        .repl
            font-style: italic
            color: tint(black, 60%)
            margin-right code-cell-spacing

        .filename
            color: tint(black, 60%)
            margin-right code-cell-spacing
        
        ul, ol
            display inline-flex
            margin 0
            padding 0
            list-style none
            float right
            
            li 
                padding 0 (code-cell-spacing / 2)
                margin 0 (code-cell-spacing / 2)
                border-radius 2px
                background-color: tint(black, 90%)
        .tag
            &:before
                content '#'
        .directive
            &:before
                content '!'
    & pre
        margin: 0
        padding: code-cell-spacing
        min-height: 1em
        background-color: darkslategrey
        color: white
        white-space: pre-wrap
    
    & > output > pre
        background-color: white
        color: black


cell, codecell
    position: relative
    @import "styles/cellmenu"

codecell 
  @import "styles/viewers"

#backlinks,
.footnotes
    padding: 0 1em;