body
    max-width 1024px
    margin 0 auto

#header
    top: 0
    position: sticky
    background-color: white
    z-index: 99999
    border-bottom: 1px solid #efefef;

   
    & > header
        display: grid
        padding: 0.6em
        gap: 0.6em
        

section, cell, codecell
    display: block

#backlinks
    color: tint(black, 60%)

a[wikilink="true"]
    &:before,
    &:after
        color: grey
    &:before 
        content: '['
    &:after 
        content: ']'



cell
    cell-border-width = 1px 3px
    cell-border-color = #9999f7

    padding: 0.6em
    margin: 0
    border-color: transparent
    border-style: solid
    border-width: cell-border-width
        
    & > *:first-child
        margin-top 0
    
    &.selected
        border-color: cell-border-color
    
    &.editing
        padding: 0


a
    &.internal.new 
        color red
        text-decoration underline

cell:not(.code) code
    border: 1px solid #00000012;
    padding: 0 0.2em;
    background-color: #00000005;
    border-radius: 2px;

@import "styles/codecell"


cell, codecell
    position: relative
    @import "styles/cellmenu"

codecell 
  @import "styles/viewers"

#backlinks,
.footnotes
    padding: 0 1em;